@model IEnumerable<BlogApp.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container mt-4">
    <div class="card bg-dark text-white shadow">
        <div class="card-header d-flex justify-content-between align-items-center border-bottom border-secondary">
            <h4 class="mb-0">
                <i class="bi bi-tags-fill"></i> Kategori Listesi
            </h4>
            <a class="btn btn-outline-success btn-sm" asp-action="Create">
                <i class="bi bi-plus-circle"></i> Yeni Kategori
            </a>
        </div>

        <div class="card-body p-0">
            <table class="table table-dark table-striped table-hover mb-0">
                <thead class="table-secondary text-dark">
                    <tr>
                        <th scope="col">Ad</th>
                        <th scope="col" style="width: 180px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Name</td>
                            <td>
                                <a class="btn btn-sm btn-outline-warning me-2" asp-action="Edit" asp-route-id="@category.Id">
                                    <i class="bi bi-pencil-square"></i> Düzenle
                                </a>
                                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@category.Id">
                                    <i class="bi bi-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
