@model BlogApp.Models.Category

@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="container mt-4">
    <div class="card bg-dark text-white shadow">
        <div class="card-header border-bottom border-secondary">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Kategori Düzenle</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label text-light"></label>
                    <input asp-for="Name" class="form-control bg-secondary text-white border-0" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-outline-warning">
                        <i class="bi bi-check-circle"></i> Güncelle
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
