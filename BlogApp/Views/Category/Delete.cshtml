@model BlogApp.Models.Category

@{
    ViewData["Title"] = "Kategori Sil";
}

<div class="container mt-4">
    <div class="card bg-dark text-white shadow">
        <div class="card-header border-bottom border-danger">
            <h4 class="mb-0 text-danger">
                <i class="bi bi-exclamation-triangle-fill"></i> Kategori Sil
            </h4>
        </div>

        <div class="card-body">
            <div class="alert alert-danger bg-gradient border border-light">
                <p>
                    <strong class="text-warning">“@Model.Name”</strong> adlı kategoriyi silmek istediğinizden emin misiniz?
                    Bu işlem geri alınamaz!
                </p>
            </div>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="bi bi-trash-fill"></i> Sil
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
