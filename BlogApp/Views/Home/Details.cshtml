@model BlogApp.Models.Post
@{
    ViewData["Title"] = Model.Title;
    var comments = ViewBag.Comments as List<BlogApp.Models.Comment>;
}

<div class="container mt-4">
    <div class="card bg-secondary text-light shadow">
        <div class="card-body">
            <h2 class="card-title">@Model.Title</h2>

            <p class="card-subtitle mb-2 text-info small">
                <i class="bi bi-folder-fill"></i> Kategori: @Model.Category?.Name |
                <i class="bi bi-calendar-date"></i> Yayın Tarihi: @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
            </p>

            <hr class="border-light" />

            <p class="card-text fs-5">@Html.Raw(Model.Content)</p>
        </div>
    </div>

    <hr class="border-light" />
    <h5>Yorumlar (@(comments?.Count ?? 0))</h5>

    @if (comments != null && comments.Count > 0)
    {
        <div class="list-group mb-4">
            @foreach (var comment in comments)
            {
                <div class="list-group-item bg-secondary text-light mb-2 rounded">
                    <small class="text-muted">@comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                    <p class="mb-1">@comment.Content</p>
                    <small class="text-info">— @comment.AuthorName</small>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">Henüz yorum yok.</p>
    }

    <h5>Yorum Ekle</h5>
    <form method="post" asp-action="AddComment">
        <input type="hidden" name="postId" value="@Model.Id" />
        <div class="mb-3">
            <label>İsim (opsiyonel)</label>
            <input type="text" name="authorName" class="form-control bg-dark text-white" placeholder="İsminizi yazabilirsiniz" />
        </div>
        <div class="mb-3">
            <label>Yorum</label>
            <textarea name="content" class="form-control bg-dark text-white" rows="4" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Yorum Gönder</button>
    </form>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light">
            <i class="bi bi-arrow-left"></i> Geri Dön
        </a>
    </div>
</div>
