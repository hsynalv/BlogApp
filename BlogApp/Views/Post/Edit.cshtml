@model BlogApp.Models.Post

@{
    ViewData["Title"] = "Gönderi Düzenle";
}

<div class="container mt-5">
    <div class="card bg-dark text-white shadow">
        <div class="card-header border-bottom border-info">
            <h4><i class="bi bi-pencil-square"></i> Gönderi Düzenle</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control bg-secondary text-white" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label"></label>
                    <textarea asp-for="Content" rows="6" class="form-control bg-secondary text-white"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label">Kategori</label>
                    <select asp-for="CategoryId" class="form-select bg-secondary text-white" asp-items="ViewBag.Categories">
                        <option value="">-- Kategori Seç --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-light">
                        <i class="bi bi-arrow-left-circle"></i> Geri
                    </a>
                    <button type="submit" class="btn btn-info text-white">
                        <i class="bi bi-check-circle"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
