@model BlogApp.Models.Post

@{
    ViewData["Title"] = "Gönderi Sil";
}

<div class="container mt-5">
    <div class="card bg-dark text-white shadow">
        <div class="card-header border-bottom border-danger">
            <h4><i class="bi bi-trash3-fill"></i> Gönderi Sil</h4>
        </div>

        <div class="card-body">
            <p class="text-warning">
                <strong>@Model.Title</strong> başlıklı gönderiyi silmek istediğinizden emin misiniz?
            </p>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-light">
                        <i class="bi bi-arrow-left-circle"></i> İptal
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
