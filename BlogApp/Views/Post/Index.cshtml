@model IEnumerable<BlogApp.Models.Post>

@{
    ViewData["Title"] = "Gönderiler";
}

<div class="container mt-5">
    <div class="card bg-dark text-white shadow">
        <div class="card-header d-flex justify-content-between align-items-center border-bottom border-info">
            <h4 class="mb-0"><i class="bi bi-stickies"></i> Gönderi Listesi</h4>
            <a class="btn btn-info text-white" asp-action="Create">
                <i class="bi bi-plus-circle"></i> Yeni Gönderi Ekle
            </a>
        </div>

        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-warning text-dark">Henüz gönderi bulunmamaktadır.</div>
            }
            else
            {
                <table class="table table-dark table-hover table-striped table-bordered align-middle">
                    <thead class="table-info text-dark">
                        <tr>
                            <th>Başlık</th>
                            <th>Kategori</th>
                            <th>Oluşturma</th>
                            <th style="width: 160px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var post in Model)
                        {
                            <tr>
                                <td>@post.Title</td>
                                <td>@post.Category?.Name</td>
                                <td>@post.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <a class="btn btn-sm btn-warning me-1" asp-action="Edit" asp-route-id="@post.Id">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@post.Id">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
